<%-include('../layout/header')-%>
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #6a11cb;
        
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
        }
</style>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-secondary text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Edit User Data</h2>
                <p class="text-white-50 mb-5">Please enter the details you want to edit </p>

                
                <form action="/useredited/<%=idnew %>" method="POST" onsubmit="return validateForm()">

                <div class="form-outline form-white mb-4">
                    <input type="text" id="nameid" class="form-control form-control-lg"    value="<%= locals.name%>"  name="name" required />
                    <label class="form-label" for="typeEmailX" > name</label>
                  
                  </div>
                <div class="form-outline form-white mb-4">
                  <input type="email" id="typeEmailX" class="form-control form-control-lg" value="<%= locals.email%>" name="email" required />
                  <label class="form-label" for="typeEmailX">email </label>
                
                </div>
  
                <button class="btn btn-outline-light btn-lg px-5" type="submit">edit</button>
                
    

                </form>

                <a class="btn btn-outline-light btn-lg px-4 mt-3" href="/admin"> Go back </a>
                <% if(locals.edit) { %>
                  <p class="text-danger mb-3"><%= edit %></p>
              <% } %>
              <p class="text-danger" id="error-message">
                <% if (locals.message) { %>
                  <%= message %>
                <% } %>
              </p>
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script>
    function validateForm() {
      var email = document.getElementById('typeEmailX').value;
      var name = document.getElementById('nameid').value;


      // Simple email validation
      var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        document.getElementById('error-message').innerText = 'Please enter a valid email address.';
        return false;
      }
  
      // Password length validation
  
      if (name.trim() === '') {
        document.getElementById('error-message').innerText = 'Please enter your name.';
        return false;
      }
  
  
  
      return true; // Form will be submitted if all validations pass
    }
  </script>
  <%-include('../layout/footer')-%>